<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :street1 %>
  <%= text_input f, :street1 %>
  <%= error_tag f, :street1 %>

  <%= label f, :street2 %>
  <%= text_input f, :street2 %>
  <%= error_tag f, :street2 %>

  <%= label f, :city %>
  <%= text_input f, :city %>
  <%= error_tag f, :city %>

  <%= label f, :zipcode %>
  <%= text_input f, :zipcode %>
  <%= error_tag f, :zipcode %>

  <%= label f, :state %>
  <%= text_input f, :state %>
  <%= error_tag f, :state %>

  <%= label f, :pobox %>
  <%= text_input f, :pobox %>
  <%= error_tag f, :pobox %>

  <%= label f, :is_pobox %>
  <%= checkbox f, :is_pobox %>
  <%= error_tag f, :is_pobox %>

  <%= label f, :begindate %>
  <%= datetime_select f, :begindate %>
  <%= error_tag f, :begindate %>

  <%= label f, :enddate %>
  <%= datetime_select f, :enddate %>
  <%= error_tag f, :enddate %>

  <%= label f, :active %>
  <%= checkbox f, :active %>
  <%= error_tag f, :active %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
