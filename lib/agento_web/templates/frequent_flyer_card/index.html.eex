<h1>Listing Frequentflyercards</h1>

<table>
  <thead>
    <tr>
      <th>Airline name</th>
      <th>Airline iata code</th>
      <th>Frequent flyer number</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for frequent_flyer_card <- @frequentflyercards do %>
    <tr>
      <td><%= frequent_flyer_card.airline_name %></td>
      <td><%= frequent_flyer_card.airline_iata_code %></td>
      <td><%= frequent_flyer_card.frequent_flyer_number %></td>

      <td>
        <span><%= link "Show", to: Routes.frequent_flyer_card_path(@conn, :show, frequent_flyer_card) %></span>
        <span><%= link "Edit", to: Routes.frequent_flyer_card_path(@conn, :edit, frequent_flyer_card) %></span>
        <span><%= link "Delete", to: Routes.frequent_flyer_card_path(@conn, :delete, frequent_flyer_card), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Frequent flyer card", to: Routes.frequent_flyer_card_path(@conn, :new) %></span>
