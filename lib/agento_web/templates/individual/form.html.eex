<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :lastname %>
  <%= text_input f, :lastname %>
  <%= error_tag f, :lastname %>

  <%= label f, :firstname %>
  <%= text_input f, :firstname %>
  <%= error_tag f, :firstname %>

  <%= label f, :gender %>
  <%= text_input f, :gender %>
  <%= error_tag f, :gender %>

  <%= label f, :native_language_code %>
  <%= text_input f, :native_language_code %>
  <%= error_tag f, :native_language_code %>

  <%= label f, :birthdate %>
  <%= date_select f, :birthdate %>
  <%= error_tag f, :birthdate %>

  <%= label f, :dateofdeath %>
  <%= date_select f, :dateofdeath %>
  <%= error_tag f, :dateofdeath %>

  <%= label f, :displayname %>
  <%= text_input f, :displayname %>
  <%= error_tag f, :displayname %>

  <%= label f, :is_deleted %>
  <%= checkbox f, :is_deleted %>
  <%= error_tag f, :is_deleted %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
