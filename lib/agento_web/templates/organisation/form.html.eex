<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :abbreviation %>
  <%= text_input f, :abbreviation %>
  <%= error_tag f, :abbreviation %>

  <%= label f, :foundationdate %>
  <%= date_select f, :foundationdate %>
  <%= error_tag f, :foundationdate %>

  <%= label f, :begindate %>
  <%= datetime_select f, :begindate %>
  <%= error_tag f, :begindate %>

  <%= label f, :description %>
  <%= text_input f, :description %>
  <%= error_tag f, :description %>

  <%= label f, :enddate %>
  <%= datetime_select f, :enddate %>
  <%= error_tag f, :enddate %>

  <%= label f, :is_deleted %>
  <%= checkbox f, :is_deleted %>
  <%= error_tag f, :is_deleted %>

  <%= label f, :popularname %>
  <%= text_input f, :popularname %>
  <%= error_tag f, :popularname %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
